<h2 class="text-center mb-4 text-white profile-header">Profile</h2>

<div class="container">
  <div class="card shadow-lg">
    <div class="card-body bg-light rounded">
      <h5 class="card-title text-primary mb-3">User Details</h5>
      <p class="card-text"><strong>Name:</strong> <%= @user.name %></p>
      <p class="card-text"><strong>Email:</strong> <%= @user.email %></p>
      <p class="card-text"><strong>Role:</strong> <%= @user.role.capitalize %></p>

      <% if @user.role == 'Recruiter' %>
        <p class="card-text"><strong>Company Name:</strong> <%= @user.company_name if @user.company_name.present? %></p>
      <% end %>

      <div class="d-flex justify-content-between mt-4">
        <%= link_to 'Back', 'javascript:history.back()', class: 'btn btn-outline-secondary btn-lg' %>
        <%= link_to 'Edit Profile', edit_profile_path, class: 'btn btn-primary btn-lg' %>
      </div>
    </div>
  </div>
</div>

<style>
  /* Apply background image to the entire body */
  body {
    background-image: url('<%= asset_path("signup.jpg") %>');
    background-size: cover;
    background-position: center center;
    background-attachment: fixed;
    color: #333;
  }

  .profile-header {
  font-size: 2.5rem;
  font-weight: bold;
  text-shadow: 2px 2px 4px rgba(0, 0, 0, 0.5);
  margin-top: 7rem; /* Add top margin to move the profile text down */
}

  .card {
    background-color: rgba(255, 255, 255, 0.9); /* Higher opacity for readability */
    border: none;
    border-radius: 0.75rem;
    margin-bottom: 2rem;
  }

  .card-title {
    font-size: 1.8rem;
    font-weight: 600;
    color: #333;
  }

  .card-text {
    font-size: 1.1rem;
    margin-bottom: 0.8rem;
  }

  /* Button Styling for consistency */
  .btn-lg {
    font-size: 1rem;
    padding: 0.5rem 1.1rem;
  }

  .btn-outline-secondary {
    border: 2px solid #6c757d;
    color: #6c757d;
    transition: all 0.3s;
  }

  .btn-outline-secondary:hover {
    background-color: #6c757d;
    color: white;
  }

  .btn-primary {
    background-color: #007bff;
    border-color: #007bff;
    transition: all 0.3s;
  }

  .btn-primary:hover {
    background-color: #0056b3;
    border-color: #004085;
  }

  /* Shadow and Hover Effects */
  .card:hover {
    box-shadow: 0 6px 12px rgba(0, 0, 0, 0.15);
  }


  .container {
  margin-top: 5rem; /* Increase margin-top to move the card further down */
  max-width: 650px;
}
</style>
