<style>
body {
  background-image: url('<%= asset_path("signup.jpg") %>');
  background-size: cover;
  background-position: center;
  background-repeat: no-repeat;
  background-attachment: fixed;
  color: #333;
  font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
  margin: 0;
  padding-top: 70px;
}

.form-container {
  background: rgba(255, 255, 255, 0.9);
  border-radius: 10px;
  padding: 20px;
  box-shadow: 0 6px 12px rgba(0, 0, 0, 0.15);
  margin-top: 20px;
  transition: transform 0.2s;
  max-width: 500px; /* Reduced max-width for a smaller form */
  width: 100%;
  margin: 0 auto; /* Center the form */
}

.form-container:hover {
  transform: translateY(-5px);
}

.form-container .form-label {
  font-weight: 600;
  color: #555;
}

.form-container .btn-primary {
  background-color: #0069d9;
  border-color: #0062cc;
  padding: 12px 25px;
  font-weight: 600;
  letter-spacing: 0.5px;
  transition: background-color 0.3s, border-color 0.3s;
  width: 100%;
}

.form-container .btn-primary:hover {
  background-color: #004a9e;
  border-color: #003882;
}

.login-heading {
  font-size: 2rem;
  color: #004085;
  margin-bottom: 1.5rem;
  font-weight: 700;
  text-shadow: 1px 1px 2px rgba(0, 0, 0, 0.1);
}

.form-control {
  padding: 10px;
  border-radius: 5px;
  border: 1px solid #ccc;
  transition: border-color 0.3s, box-shadow 0.3s;
  width: 100%;
}

.form-control:focus {
  border-color: #007bff;
  box-shadow: 0 0 5px rgba(0, 123, 255, 0.5);
  outline: none;
}

.d-grid {
  display: flex;
  justify-content: center;
  width: 100%;
}

.mt-3 a {
  color: #0069d9;
  font-weight: 600;
  letter-spacing: 0.5px;
  transition: color 0.3s;
}

.mt-3 a:hover {
  color: #004a9e;
  text-decoration: none;
}

.mt-3 a:focus {
  outline: none;
  box-shadow: 0 0 5px rgba(0, 123, 255, 0.5);
}

@media (max-width: 768px) {
  .form-container {
    padding: 15px;
  }

  .form-control {
    padding: 8px;
  }

  .form-container .btn-primary {
    padding: 10px 20px;
  }
}

@media (max-width: 576px) {
  .form-container {
    margin-top: 10px;
    padding: 12px;
  }
}

</style>

<div class="container mt-5">
  <div class="row justify-content-center">
    <div class="col-md-12 col-lg-10"> <!-- Further adjusted column width for a wider card -->
      <div class="form-container shadow-sm">
        <h2 class="text-center login-heading">Log in</h2>
        <%= form_for(resource, as: resource_name, url: session_path(resource_name), html: { class: 'p-4' }) do |f| %>
          <div class="mb-3">
            <%= f.label :email, class: 'form-label' %>
            <%= f.email_field :email, autofocus: true, autocomplete: "email", class: 'form-control' %>
          </div>

          <div class="mb-3">
            <%= f.label :password, class: 'form-label' %>
            <%= f.password_field :password, autocomplete: "current-password", class: 'form-control' %>
          </div>

          <% if devise_mapping.rememberable? %>
            <div class="mb-3 form-check">
              <%= f.check_box :remember_me, class: 'form-check-input' %>
              <%= f.label :remember_me, class: 'form-check-label' %>
            </div>
          <% end %>

          <div class="d-grid">
            <%= f.submit "Log in", class: "btn btn-primary" %>
          </div>
        <% end %>

        <div class="mt-3 text-center">
          <%= render "devise/shared/links" %>
        </div>
      </div>

      <!-- Log Out Button -->
      <div class="row justify-content-center mt-3">
        <div class="col-md-6 text-center">
          <% if user_signed_in? %>
            <%= link_to "Log out", destroy_user_session_path, method: :delete, class: "btn btn-danger" %>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
