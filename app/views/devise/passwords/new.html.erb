<div class="container mt-5">
  <div class="row justify-content-center">
    <div class="col-md-12 col-lg-8"> <!-- Adjusted column width for a consistent form -->
      <div class="form-container shadow-sm">
        <h2 class="text-center login-heading">Forgot Your Password?</h2>

        <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post, class: "p-4" }) do |f| %>
          <%= render "devise/shared/error_messages", resource: resource %>

          <div class="mb-3">
            <%= f.label :email, class: "form-label" %>
            <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control", placeholder: "Enter your email" %>
          </div>

          <div class="d-grid">
            <%= f.submit "Send me reset password instructions", class: "btn btn-primary" %>
          </div>
        <% end %>

        <div class="mt-3 text-center">
          <%= render "devise/shared/links" %>
        </div>
      </div>
    </div>
  </div>
</div>

<style>
body {
  background-image: url('<%= asset_path("signup.jpg") %>'); /* Matches background with login/signup pages */
  background-size: cover;
  background-position: center;
  background-repeat: no-repeat;
  background-attachment: fixed;
  color: #333;
  font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
  margin: 0;
  padding: 0;
}

.form-container {
  background: rgba(255, 255, 255, 0.9);
  border-radius: 10px;
  padding: 20px;
  box-shadow: 0 6px 12px rgba(0, 0, 0, 0.15);
  margin-top: 20px;
  max-width: 500px;
  width: 100%;
  margin: 0 auto;
}

.form-container .form-label {
  font-weight: 600;
  color: #555;
}

.form-container .btn-primary {
  background-color: #0069d9;
  border-color: #0062cc;
  padding: 12px 25px;
  font-weight: 600;
  letter-spacing: 0.5px;
  transition: background-color 0.3s, border-color 0.3s;
  width: 100%;
}

.form-container .btn-primary:hover {
  background-color: #004a9e;
  border-color: #003882;
}

.login-heading {
  font-size: 2rem;
  color: #004085;
  margin-bottom: 1.5rem;
  font-weight: 700;
  text-shadow: 1px 1px 2px rgba(0, 0, 0, 0.1);
}

.form-control {
  padding: 10px;
  border-radius: 5px;
  border: 1px solid #ccc;
  transition: border-color 0.3s, box-shadow 0.3s;
  width: 100%;
}

.form-control:focus {
  border-color: #007bff;
  box-shadow: 0 0 5px rgba(0, 123, 255, 0.5);
  outline: none;
}

.d-grid {
  display: flex;
  justify-content: center;
  width: 100%;
}

.mt-3 a {
  color: #0069d9;
  font-weight: 600;
  letter-spacing: 0.5px;
  transition: color 0.3s;
}

.mt-3 a:hover {
  color: #004a9e;
  text-decoration: none;
}

.mt-3 a:focus {
  outline: none;
  box-shadow: 0 0 5px rgba(0, 123, 255, 0.5);
}

@media (max-width: 768px) {
  .form-container {
    padding: 15px;
  }

  .form-control {
    padding: 8px;
  }

  .form-container .btn-primary {
    padding: 10px 20px;
  }
}

@media (max-width: 576px) {
  .form-container {
    margin-top: 10px;
    padding: 12px;
  }
}
</style>
